<Page
    x:Class="Photobooth.App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Photobooth.App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="661.834">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <TextBlock Name="tbGamepadOn" Text="Gamepad connecté" Margin="0,0,10,0" />
            <TextBlock Name="tbGamepadOff" Text="Gamepad déconnecté" Margin="0,0,10,0" />
            <TextBlock Name="tbGamepadButton" Text="(Pressez un bouton)" Margin="0,0,10,0" />
        </StackPanel>
    </Grid>
</Page>
